{
  "boss": true,     // Allow assignments where expressions are expected.
  "expr": true,     // Allow expressions where statements are expected.
  "undef": true,    // Variables should be defined.
  "loopfunc": true, // Allow function creation in loops.
  "-W082": true,    // Allow function declarations in blocks.
  "-W022": true,    // Allow assignment to exception block parameter.
  "trailing": true, // Do not leave trailing whitespace.
  "white": true,    // Enable strict whitespace checking.
  "indent": 2,      // The code uses an indentation width of 2 spaces.
  "node": true,     // Node.js is present.
  "globals": {
    "jQuery": true,
    "it": true,
    "describe": true,
    "before": true,
    "after": true,
    "sinon": true,
    "expect": true
  }
}
